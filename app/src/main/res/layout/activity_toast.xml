<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title_bg"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_basic_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="@style/BtnNext"
                android:textAllCaps="false"
                android:text="Basic Toast"/>

            <Button
                android:id="@+id/btn_basic_toast2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="@style/BtnNext"
                android:textAllCaps="false"
                android:text="Basic Toast2"/>

            <Button
                android:id="@+id/btn_custom_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="@style/BtnNext"
                android:textAllCaps="false"
                android:text="自定义位置Toast"/>

            <Button
                android:id="@+id/btn_custom_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="@style/BtnNext"
                android:textAllCaps="false"
                android:text="带图片Toast"/>

            <Button
                android:id="@+id/btn_custom_smile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="@style/BtnNext"
                android:textAllCaps="false"
                android:text="自定义Widget"/>

            <Button
                android:id="@+id/btn_custom_smile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="@style/BtnNext"
                android:textAllCaps="false"
                android:text="自定义Widget2"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>